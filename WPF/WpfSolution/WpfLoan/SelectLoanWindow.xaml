<Window x:Class="WpfLoan.SelectLoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLoan"
        mc:Ignorable="d"
        Title="SelectLoanWindow" Height="197" Width="337">
    <Grid Margin="0,0,0,-6">
        <Label Content="Sélectionner un ID :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserInput" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Modifier" HorizontalAlignment="Left" Margin="213,10,0,0" VerticalAlignment="Top" Width="69" Click="ModifyButton_Click"/>
        <Button Content="Supprimer" HorizontalAlignment="Left" Margin="213,41,0,0" VerticalAlignment="Top" Width="69" Click="DeleteButton_Click"/>
        <Button Content="Créer un nouvel emprunt" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.076,-1.621" Click="NewLoanButton_Click"/>
    </Grid>
</Window>
